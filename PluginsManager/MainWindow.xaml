<Window x:Class="PluginManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="插件管理器" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="PluginsListView" Grid.Row="0" Margin="10" Background="#1E1E1E" Foreground="White"
                  BorderThickness="1" BorderBrush="#4EC9B0">
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="#4EC9B0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="Padding" Value="5,2"/>
                </Style>
            </ListView.Resources>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="#4EC9B0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDownloaded}" Value="True">
                            <Setter Property="Background" Value="#3E3E42"/>
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#464647"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#007ACC"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="插件名称" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,0,1,0" BorderBrush="#4EC9B0" Padding="5,2">
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="状态" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,0,1,0" BorderBrush="#4EC9B0" Padding="5,2">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#FF6B6B"/>
                                                <Setter Property="Text" Value="未下载"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDownloaded}" Value="True">
                                                        <Setter Property="Text" Value="已下载"/>
                                                        <Setter Property="Foreground" Value="#4EC9B0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="文件" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,0,1,0" BorderBrush="#4EC9B0" Padding="5,2">
                                    <TextBlock Text="{Binding FileName}"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="类型" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="5,2">
                                    <TextBlock Text="{Binding PluginType}"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Background="#2D2D30">
            <Button x:Name="DownloadButton" Content="下载" Width="80" Height="30" Margin="5" 
            Background="#0E639C" Foreground="White" BorderBrush="#0E639C"
            Click="DownloadButton_Click"/>
            <Button x:Name="LaunchButton" Content="启动" Width="80" Height="30" Margin="5" 
            Background="#0E639C" Foreground="White" BorderBrush="#0E639C"
            Click="LaunchButton_Click"/>
            <Button x:Name="UninstallButton" Content="卸载" Width="80" Height="30" Margin="5" 
            Background="#0E639C" Foreground="White" BorderBrush="#0E639C"
            Click="UninstallButton_Click"/>
            <Button x:Name="RefreshButton" Content="刷新" Width="80" Height="30" Margin="5" 
            Background="#0E639C" Foreground="White" BorderBrush="#0E639C"
            Click="RefreshButton_Click"/>
        </StackPanel>
    </Grid>
</Window>